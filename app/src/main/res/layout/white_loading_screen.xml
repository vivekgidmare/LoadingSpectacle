<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gif_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_gif_bg_loading"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/whiteFrame"
        android:layout_width="203dp"
        android:layout_height="98dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/frame_gray"
        android:visibility="visible">

        <ImageView
            android:id="@+id/leftFrame"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/left_gray" />

        <ImageView
            android:id="@+id/rightFrame"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/right_gray" />
    </RelativeLayout>
</RelativeLayout>